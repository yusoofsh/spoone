{
	"name": "spoone",
	"private": true,
	"sideEffects": false,
	"scripts": {
		"build": "run-s \"build:*\"",
		"build:css": "npm run generate:css -- --minify",
		"build:remix": "remix build",
		"dev": "run-p \"dev:*\"",
		"dev:css": "npm run generate:css -- --watch",
		"dev:remix": "remix dev",
		"generate:css": "tailwindcss -i ./tailwind/styles.css -o ./app/styles/tailwind.css",
		"format": "prettier --ignore-path .gitignore --write .",
		"typecheck": "tsc -b"
	},
	"dependencies": {
		"@remix-run/node": "^1.8.2",
		"@remix-run/react": "^1.8.2",
		"@remix-run/vercel": "^1.8.2",
		"@vercel/node": "^2.8.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"@remix-run/dev": "^1.8.2",
		"@remix-run/eslint-config": "^1.8.2",
		"@remix-run/serve": "^1.8.2",
		"@types/react": "^18.0.26",
		"@types/react-dom": "^18.0.9",
		"eslint": "^8.29.0",
		"eslint-config-prettier": "^8.5.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.8.1",
		"tailwindcss": "^3.2.4",
		"typescript": "^4.9.4"
	},
	"engines": {
		"node": ">=14"
	}
}
